{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}",
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
        },
        {
            "type": "node",
            "request": "attach",
            "name": "PM2 Attach",
            "port": 9232
        },
        {
            "name": "Launch Currently Open Script (JS)",
            "type": "node",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "livestreamer",
            "type": "node",
            "request": "launch",
            "program": "src/index.js",
            "runtimeArgs": [
                "--unhandled-rejections=strict",
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
        },
        {
            "name": "livestreamer-pm2",
            "type": "node",
            "request": "launch",
            "program": "pm2",
            "args": ["start", "src/pm2.config.cjs"],
            "runtimeArgs": [
                "--unhandled-rejections=strict",
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
        },
        {
            "name": "livestreamer-pm2-dist",
            "type": "node",
            "request": "launch",
            "program": "pm2",
            "args": ["start", "dist/pm2.config.cjs"],
            "runtimeArgs": [
                "--unhandled-rejections=strict",
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
        },
        {
            "name": "livestreamer-dist",
            "type": "node",
            "request": "launch",
            "program": "dist/index.js",
            "runtimeArgs": [
                "--unhandled-rejections=strict",
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "livestreamer-electron",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd",
            "program": "src/index.js",
            "args": ["-d"],
            "runtimeArgs": [
                "--unhandled-rejections=strict",
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
        },
        {
            "name": "livestreamer-electron-dist",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd",
            "program": "dist/index.js",
            "args": ["-d"],
            "runtimeArgs": [
                "--unhandled-rejections=strict",
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
        },
        {
            "name": "build",
            "type": "node",
            "request": "launch",
            "program": "tools/cmd.js",
            "args": ["build", "-p"],
            "runtimeArgs": [
                "--unhandled-rejections=strict",
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
        },
        {
            "name": "package",
            "type": "node",
            "request": "launch",
            "program": "tools/cmd.js",
            "args": ["package"],
            "runtimeArgs": [
                "--unhandled-rejections=strict",
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
        },
        {
            "name": "docker-root",
            "type": "node",
            "request": "attach",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/opt/livestreamer",
            "port": 9229,
            "presentation": {
                "hidden": true
            }
        },
        {
            "name": "docker-media-server",
            "type": "node",
            "request": "attach",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/opt/livestreamer",
            "port": 9230,
            "presentation": {
                "hidden": true
            },
        },
        {
            "name": "docker-file-manager",
            "type": "node",
            "request": "attach",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/opt/livestreamer",
            "port": 9231,
            "presentation": {
                "hidden": true
            },
        },
        {
            "name": "docker-main",
            "type": "node",
            "request": "attach",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/opt/livestreamer",
            "port": 9232,
            "presentation": {
                "hidden": true
            },
        }
    ],
    "compounds": [
        {
          "name": "docker",
          "configurations": ["docker-root", "docker-main", "docker-media-server", "docker-file-manager"],
          "stopAll": true,
        }
    ]
}